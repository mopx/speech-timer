- model_class = Timer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:minutes)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @timers.each do |timer|
      %tr
        %td= link_to timer.id, timer_path(timer)
        %td= timer.name
        %td= timer.minutes
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_timer_path(timer), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), timer_path(timer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_timer_path, :class => 'btn btn-primary'
