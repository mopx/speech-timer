- model_class = Timer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @timer.name
%p
  %strong= model_class.human_attribute_name(:minutes) + ':'
  %br
  = @timer.minutes

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), timers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_timer_path(@timer), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), timer_path(@timer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
